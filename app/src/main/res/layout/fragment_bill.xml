<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/dash_back"
    android:layout_height="match_parent"
    tools:context=".Fragments.Bill">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="30sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/l1"
                android:padding="5sp"
                android:layout_margin="10sp"
                android:background="@color/a_blue"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/sname"
                    android:text="My Shop Name"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/sph"
                    android:text="My Phone No."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:id="@+id/cn"
                android:text="Bill To Sayan"
                android:textStyle="bold"
                android:layout_below="@+id/l1"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/iddate"
                android:text="Bill To Sayan"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/l1"
                android:layout_marginRight="10sp"
                android:layout_marginTop="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:id="@+id/l2"
                android:orientation="horizontal"
                android:padding="5sp"
               android:background="@color/greenD"
                android:layout_marginTop="20sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_below="@+id/cn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Items"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="Amount"
                    android:layout_alignParentRight="true"
                   android:layout_gravity="right"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/l3"
                android:orientation="horizontal"
                android:padding="5sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                    android:layout_below="@+id/l2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/items1"
                    android:text="Items"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/pric"
                    android:text="Amount"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>
            <View
                android:id="@+id/v1"
                android:layout_margin="10sp"
                android:layout_below="@+id/l3"
                android:background="@color/dash_back"
                android:layout_width="match_parent"
                android:layout_height="2sp"/>
            <TextView
                android:id="@+id/t1"
                android:layout_below="@+id/v1"
                android:layout_marginLeft="10sp"
                android:text="Delivery Charge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/pric1"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/v1"
                android:layout_marginRight="10sp"
                android:text="Sub Total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:id="@+id/v2"
                android:layout_margin="10sp"
                android:layout_below="@+id/t1"
                android:background="@color/dash_back"
                android:layout_width="match_parent"
                android:layout_height="2sp"/>
            <TextView
                android:id="@+id/t2"
                android:layout_below="@+id/v2"
                android:layout_marginLeft="10sp"
                android:text="Total Amount"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tamount"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/v2"
                android:layout_marginRight="10sp"
                android:textStyle="bold"
                android:text="Sub Total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:id="@+id/v3"
                android:layout_margin="10sp"
                android:layout_below="@+id/t2"
                android:background="@color/dash_back"
                android:layout_width="match_parent"
                android:layout_height="2sp"/>
            <TextView
                android:id="@+id/t3"
                android:layout_below="@+id/v3"
                android:layout_marginLeft="10sp"
                android:text="Payment Status"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/stat"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/v3"
                android:layout_marginRight="10sp"
                android:text="DUE"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:id="@+id/v4"
                android:layout_margin="10sp"
                android:layout_below="@+id/t3"
                android:background="@color/dash_back"
                android:layout_width="match_parent"
                android:layout_height="2sp"/>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_below="@+id/v4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25sp"
                android:src="@drawable/ic_baseline_mobile_screen_share_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>