<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical"
    android:focusable="true"
    android:background="@color/white"
    tools:context=".Fragments.Kyc">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

   <androidx.cardview.widget.CardView
       android:layout_marginTop="20sp"
       android:layout_marginLeft="10sp"
       android:layout_marginRight="10sp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <RelativeLayout
           android:background="@color/greenD"
           android:padding="10sp"
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <TextView
               android:text="KYC STATUS"
               android:layout_centerVertical="true"
               android:textColor="@color/white"
               android:textStyle="bold"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
           <TextView
               android:text="INACTIVE"
               android:background="@color/white"
               android:padding="10sp"
               android:layout_alignParentRight="true"
               android:textColor="@color/red"
               android:textStyle="bold"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
       </RelativeLayout>
   </androidx.cardview.widget.CardView>

    <TextView
        android:layout_marginLeft="10sp"
        android:layout_marginTop="20sp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="Complete your KYC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:id="@+id/s1"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:hint="Document Type"
        android:layout_marginRight="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/l1"
            android:visibility="invisible"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:textStyle="bold"
            android:layout_marginLeft="10sp"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:layout_marginRight="10sp"
            android:text="upload document scans in JPEG format,maximum 10.0MB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="10sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputLayout
                android:hint="Front side"
                android:layout_weight="1"
                android:layout_marginRight="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:text="BROWSE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="10sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputLayout
                android:hint="Back side"
                android:layout_weight="1"
                android:layout_marginRight="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:text="BROWSE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:textStyle="bold"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_gravity="center"
            android:layout_marginRight="10sp"
            android:text="upload your selfie in JPEG format,maximum 10.0MB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="10sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputLayout
                android:hint="Selfie"
                android:layout_weight="1"
                android:layout_marginRight="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:text="BROWSE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    <CheckBox
        android:layout_marginLeft="10sp"
        android:layout_marginTop="20sp"
        android:layout_gravity="center"
        android:text="I agree to the terms conditions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_marginLeft="10sp"
        android:layout_marginTop="30sp"
        android:text="PROCEED"
        android:layout_marginBottom="30sp"
        android:textColor="@color/white"
        android:background="@drawable/kyc_proceed_design"
        android:layout_marginRight="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
        </LinearLayout>
        </LinearLayout>

</androidx.core.widget.NestedScrollView>