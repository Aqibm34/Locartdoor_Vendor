<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="20sp"
        android:layout_marginRight="10sp"
        android:layout_marginLeft="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginBottom="10sp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:background="@color/greenD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/cimage1"
                    android:layout_margin="10sp"
                    android:src="@drawable/profile"
                    android:layout_width="50sp"
                    android:layout_height="50sp"/>
                <TextView
                    android:id="@+id/cname1"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginLeft="20sp"
                    android:text="Customer Name"
                    android:layout_toRightOf="@+id/cimage1"
                 android:layout_marginTop="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/caddress1"
                    android:textColor="@color/white"
                    android:textStyle="italic"
                    android:layout_marginLeft="20sp"
                    android:text="Customer Address"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/cimage1"
                   android:layout_below="@+id/cname1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_alignParentRight="true"
                    android:padding="10sp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/red"
                    android:layout_marginRight="10sp"
                    android:text="DUE"
                    android:background="@drawable/status_design"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>
            <TextView
                android:id="@+id/orderid2"
                android:layout_marginTop="15sp"
                android:layout_marginLeft="10sp"
                android:text="#9199"
                android:drawablePadding="10sp"
                android:drawableStart="@drawable/ic_center_focus_weak_black_24dp"
                android:textColor="@color/orange"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/date_time2"
                android:layout_below="@+id/location1"
                android:layout_marginLeft="10sp"
                android:text="29/05/2020 | 8:59PM"
                android:layout_marginTop="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/items2"
                android:layout_marginTop="15sp"
                android:layout_marginLeft="10sp"
                android:textStyle="bold"
                android:text="2 Plate Full Mutton Biriyani || Rs.470/-"
                android:layout_marginRight="10sp"
                android:layout_below="@+id/date_time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>