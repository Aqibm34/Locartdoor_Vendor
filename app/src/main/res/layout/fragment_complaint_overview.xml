<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Fragments.complaintOverview"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    xmlns:android="http://schemas.android.com/apk/res/android" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/cust_name_co"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:elevation="5dp"
            android:background="@drawable/border1"
            android:layout_marginBottom="5dp"
            android:text="Customer Name"/>

        <TextView
            android:id="@+id/cust_id_co"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Id:-1021"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Reference ID: "/>

            <TextView
                android:id="@+id/refid_co"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="10002546"/>
        </LinearLayout>

        <TextView
            android:id="@+id/order_id_co"
            android:layout_marginBottom="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Order ID: 42005"/>

        <TextView
            android:id="@+id/date_co"
            android:layout_marginBottom="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="01/06/2020"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/greenD"
            android:text="Issue:"/>
        <TextView
            android:id="@+id/issue_co"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Food quality is not good and the food was not packed properly"/>

        <TextView
            android:id="@+id/status_co"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:padding="10dp"
            android:background="@drawable/border"
            android:layout_gravity="end"
            android:textColor="@color/red"
            android:text="Active"/>


    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="start"
        android:padding="10dp"
        android:hint="Reply"
        android:background="@drawable/border"
        android:layout_marginTop="20dp"
        android:autofillHints="none" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/status_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Query resolved? Change status: "
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:checked="false" />

    <Button
        android:id="@+id/q_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:text="Submit"
        android:background="@drawable/btn_custom"/>

</LinearLayout>
</ScrollView>